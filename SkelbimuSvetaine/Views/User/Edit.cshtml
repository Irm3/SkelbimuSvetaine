@model SkelbimuSvetaine.Models.User

@{
    ViewData["Title"] = "Edit";
}

<h1 class="menu-label title is-size-5">"@Model.Username" vartotojo redagacija</h1>

<form asp-action="Edit">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="field">
        <p class="control has-icons-left">
            <input asp-for="Username" class="input" type="text" placeholder="Vartotojo vardas">
            <span class="icon is-small is-left">
                <i class="fas fa-user"></i>
            </span>
        </p>
    </div>
    <div class="field">
        <p class="control has-icons-left has-icons-right">
            <input asp-for="Email" class="input" type="email" placeholder="El. paštas">
            <span class="icon is-small is-left">
                <i class="fas fa-envelope"></i>
            </span>
            <span class="icon is-small is-right">
                <i class="fas fa-check"></i>
            </span>
        </p>
    </div>
    <div class="field">
        <p class="control has-icons-left">
            <input asp-for="Password" class="input" type="password" placeholder="Slaptažodis">
            <span class="icon is-small is-left">
                <i class="fas fa-lock"></i>
            </span>
        </p>
    </div>

    <div class="field">
        <p class="control has-icons-left">
            <input asp-for="ConfirmPassword" class="input" type="password" placeholder="Patvirtinkite slaptažodį">
            <span class="icon is-small is-left">
                <i class="fas fa-lock"></i>
            </span>
        </p>
    </div>

    <div class="field">
        <p class="control has-icons-left">
            <input asp-for="Phone" class="input" type="tel" placeholder="Telefono nr.">
            <span class="icon is-small is-left">
                <i class="fas fa-phone"></i>
            </span>
        </p>
    </div>
    <div class="field">
        <p class="control has-icons-left">
            <input asp-for="Miestas" class="input" type="tel" placeholder="Miestas">
            <span class="icon is-small is-left">
                <i class="fas fa-city"></i>
            </span>
        </p>
    </div>
    <div class="field">
        <p class="control">
            <button type="submit" class="button is-success">Pridėti</button>
        </p>
    </div>
</form>

<div>
    <a class="button is-info" asp-action="Index">Atgal</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
