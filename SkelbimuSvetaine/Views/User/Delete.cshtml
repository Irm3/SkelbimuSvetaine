@model SkelbimuSvetaine.Models.User

@{
    ViewData["Title"] = "Delete";
}

<h1 class="menu-label title is-size-5">Šalinti vartotoją</h1>

<h3>Ar tikrai norite ištrinti šį vartotoją?</h3>
<div class="box">

    <div class="field">
        <p>Vartotojas: </p>
        <p>@Html.DisplayFor(model => model.Username)</p>
    </div>

    <div class="field">
        <p>El. paštas: </p>
        <p>@Html.DisplayFor(model => model.Email)</p>
    </div>

    <div class="field">
        <p>Slaptažodis: </p>
        <input type="password" disabled value="@Html.DisplayFor(model => model.Password)" />
    </div>

    <div class="field">
        <p>Telefono numeris: </p>
        <p>@Html.DisplayFor(model => model.Phone)</p>
    </div>

    <div class="field">
        <p>Miestas: </p>
        <p>@Html.DisplayFor(model => model.Miestas)</p>
    </div>

</div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Naikinti" class="button is-danger" /> 
        <a class="button is-info" asp-action="Index">Atgal</a>
    </form>

