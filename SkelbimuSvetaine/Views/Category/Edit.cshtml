@model SkelbimuSvetaine.Models.Category

@{
    ViewData["Title"] = "Edit";
}

<h1 class="menu-label title is-size-5">Kategorijos redagacija</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <p>Pavadinimas </p> 
                <input asp-for="Name" class="input" style="width:200px;" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Saugoti" class="button is-warning" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="button is-info" asp-action="Index">Atgal</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
