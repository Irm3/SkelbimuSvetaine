@model SkelbimuSvetaine.Models.Category

@{
    ViewData["Title"] = "Create";
}

<h1 class="menu-label title is-size-5">Kategorijos pridėjimas</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <p>Pavadinimas</p>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Pridėti" class="button is-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="button is-info" asp-action="Index">Atgal</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
